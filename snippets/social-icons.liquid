{% comment %}
  Renders social icons.
  Accepts:
  - class: {String} a class to be added to the <ul> element (optional).

  Usage:
  {% render 'social-icons',
    class: 'my-class'
  %}
{% endcomment %}

<div class="flex gap-5 items-start">
  <ul class="mt-base flex flex-col gap-base" role="list">
    {%- if settings.social_tiktok_link != blank -%}
      <li class="w-full">
        <a
          href="{{ settings.social_tiktok_link }}"
          class="flex gap-small items-center text-body-xs text-grey300 capitalize"
        >
          {%- render 'icon-tiktok', class: 'w-[14px] h-base' -%}
          <span class="text-body-xs text-grey300 capitalize">{{ 'general.social.links.tiktok' | t }}</span>
          <span class="visually-hidden">{{ 'general.social.links.tiktok' | t }}</span>
        </a>
      </li>
    {%- endif -%}

